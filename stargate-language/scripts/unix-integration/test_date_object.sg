[test]
fn test_date_dice_fields() {
    let date_data = (get-date);
    let selected = date_data | dice-object formatted timestamp;
    ut.assert_true(true, "Should dice date to specific fields");
}

[test]
fn test_date_utc() {
    let date_data = (get-date -u);
    let offset = date_data | slice-object offset;
    ut.assert_not_equals(offset, "", "Should have offset value with -u flag");
}

[test]
fn test_date_field_filtering() {
    let date_data = (get-date --field timestamp);
    let timestamp = date_data | slice-object timestamp;
    ut.assert_not_equals(timestamp, "", "Should filter to timestamp field only");
}

