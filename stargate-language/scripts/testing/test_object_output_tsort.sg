[test]
fn test_tsort_object_output_field_filter() {
    echo "p q" > /tmp/tsort_test_filter.txt;
    let count_only = (tsort --obj -f count /tmp/tsort_test_filter.txt);
    ut.assert_equals(count_only, 2, "Field filter should extract count");
    rm /tmp/tsort_test_filter.txt;
}

